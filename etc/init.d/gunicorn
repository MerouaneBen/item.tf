PATH=/usr/local/sbin:/usr/local/bin:/sbin:/bin:/usr/sbin:/usr/bin

cd /srv/www/item.tf

case "$1" in
start)
logger -p daemon.info "Starting Gunicorn server"
gunicorn --daemon --workers=3 --access-logfile=/var/log/gunicorn/access.log --error-logfile=/var/log/gunicorn/error.log main:app
;;

stop)
logger -p daemon.info "Stopping Gunicorn server"
killall gunicorn
;;

restart|force-reload)
logger -p daemon.info "Restarting Gunicorn server"
$0 stop
$0 start
;;
esac
